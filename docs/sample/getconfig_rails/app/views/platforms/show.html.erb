<%- model_class = Platform -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:platform_name) %>:</strong></dt>
  <dd><%= @platform.platform_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:build) %>:</strong></dt>
  <dd><%= @platform.build %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              platforms_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_platform_path(@platform), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              platform_path(@platform),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
